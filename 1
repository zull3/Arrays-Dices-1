/*
Dice game with arrays --Hand holding honeymoon edition--
Declare variables
Promt input no. of throws
Create an array to index number of throws
Generate rand numbers for all throws
Print index and values
Create an array to sum all the vaules
Print the values

*/


import java.util.Scanner;

class Main {
  public static void main(String[] args) {

    //Variables 
    int noOfThrows = 0;

    Scanner input = new Scanner (System.in);

    System.out.print("Enter number of throws:");
    noOfThrows = input.nextInt();

    // Create an array of the given size
    int[] myArray = new int[noOfThrows];


    // Fill the array with random numbers
    for (int i=0; i < myArray.length; i++) {
    // Generate random numbers in the range 1-6
    myArray[i] = (int)(Math.random()*6)+1;
    }
    
    System.out.println(); //Print new line for astetics

    //Print the array
    System.out.printf("%5s %5s%n", "Throw#", "Value");
    for (int i=1; i < myArray.length; i++) {
    System.out.printf("%5d %5d%n", i, myArray[i]);
    }
    System.out.println(); //Print new line for astetics

    //update stats

    // Create an array to hold the counts of each dice value
    int[] counts = new int[6]; // 6 possible dice values

    for (int i = 0; i < myArray.length; i++) {
    int index = myArray[i] - 1;
    if (index >= 0 && index < counts.length) {
        counts[index]++;
     }
    }

    // Print the counts of each dice value
    for (int i = 0; i < counts.length; i++) {
    System.out.println("Number of " + (i + 1) + "s: " + counts[i]);
    }
    
    input.close(); //close scanner and memory leak

  }
}
